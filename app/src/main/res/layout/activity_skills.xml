<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.codecomputerlove.problemshared.module.SkillsActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:text="What skills do you have?"
    android:textSize="25sp"
    android:gravity="center"
    android:textColor="@android:color/black"
    android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This will help us match you with the right volunteering opportunity"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <com.codecomputerlove.problemshared.models.ToggleButton
            android:id="@+id/heavy_lifting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="heavy lifting"
            app:colorOne="@color/button_background"
            app:colorTwo="@color/ps_blue"
           android:background="@color/button_background"
            android:textColor="@color/ps_blue"
            android:fontFamily="sans-serif-medium"
            android:layout_marginRight="10dp"/>

        <com.codecomputerlove.problemshared.models.ToggleButton
            android:id="@+id/catering"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="catering"
            app:colorOne="@color/button_background"
            app:colorTwo="@color/ps_blue"
            android:background="@color/button_background"
            android:textColor="@color/ps_blue"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <com.codecomputerlove.problemshared.models.ToggleButton
            android:id="@+id/driving"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Driving"
            app:colorOne="@color/button_background"
            app:colorTwo="@color/ps_blue"
            android:background="@color/button_background"
            android:textColor="@color/ps_blue"
            android:fontFamily="sans-serif-medium"
            android:layout_marginRight="10dp"/>

        <com.codecomputerlove.problemshared.models.ToggleButton
            android:id="@+id/diy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="diy"
            app:colorOne="@color/button_background"
            app:colorTwo="@color/ps_blue"
            android:background="@color/button_background"
            android:textColor="@color/ps_blue"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <com.codecomputerlove.problemshared.models.ToggleButton
            android:id="@+id/gardening"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="gardening"
            app:colorOne="@color/button_background"
            app:colorTwo="@color/ps_blue"
            android:background="@color/button_background"
            android:textColor="@color/ps_blue"
            android:fontFamily="sans-serif-medium"
            android:layout_marginRight="10dp"/>

        <com.codecomputerlove.problemshared.models.ToggleButton
            android:id="@+id/cleaning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="cleaning"
            app:colorOne="@color/button_background"
            app:colorTwo="@color/ps_blue"
            android:background="@color/button_background"
            android:textColor="@color/ps_blue"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <com.codecomputerlove.problemshared.models.ToggleButton
            android:id="@+id/teaching"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="teaching"
            app:colorOne="@color/button_background"
            app:colorTwo="@color/ps_blue"
            android:background="@color/button_background"
            android:textColor="@color/ps_blue"
            android:fontFamily="sans-serif-medium"
            android:layout_marginRight="10dp"/>

        <com.codecomputerlove.problemshared.models.ToggleButton
            android:id="@+id/fundraising"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="fundraising"
            app:colorOne="@color/button_background"
            app:colorTwo="@color/ps_blue"
            android:background="@color/button_background"
            android:textColor="@color/ps_blue"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <com.codecomputerlove.problemshared.models.ToggleButton
            android:id="@+id/care_work"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="care work"
            app:colorOne="@color/button_background"
            app:colorTwo="@color/ps_blue"
            android:background="@color/button_background"
            android:textColor="@color/ps_blue"
            android:fontFamily="sans-serif-medium"
            android:layout_marginRight="10dp"/>

        <com.codecomputerlove.problemshared.models.ToggleButton
            android:id="@+id/legal_work"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="legal work"
            app:colorOne="@color/button_background"
            app:colorTwo="@color/ps_blue"
            android:background="@color/button_background"
            android:textColor="@color/ps_blue"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <Button
        android:id="@+id/text_button"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Next"
        android:textColor="@android:color/white"
        android:background="@color/ps_blue"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:onClick="launchCats"/>

</LinearLayout>
