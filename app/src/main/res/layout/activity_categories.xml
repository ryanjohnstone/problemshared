<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.codecomputerlove.problemshared.module.SkillsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="What causes are you interested in?"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <com.codecomputerlove.problemshared.models.ToggleButtonPink
            android:id="@+id/general_charity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="general charity"
            android:background="@color/button_background"
            android:textColor="@color/ps_pink"
            android:fontFamily="sans-serif-medium"
            android:layout_marginRight="10dp"/>

        <com.codecomputerlove.problemshared.models.ToggleButtonPink
            android:id="@+id/disabled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="disabled"
            android:background="@color/button_background"
            android:textColor="@color/ps_pink"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <com.codecomputerlove.problemshared.models.ToggleButtonPink
            android:id="@+id/elderly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="elderly"
            android:background="@color/button_background"
            android:textColor="@color/ps_pink"
            android:fontFamily="sans-serif-medium"
            android:layout_marginRight="10dp"/>

        <com.codecomputerlove.problemshared.models.ToggleButtonPink
            android:id="@+id/education"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="education"
            android:background="@color/button_background"
            android:textColor="@color/ps_pink"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <com.codecomputerlove.problemshared.models.ToggleButtonPink
            android:id="@+id/homeless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="homeless"
            android:background="@color/button_background"
            android:textColor="@color/ps_pink"
            android:fontFamily="sans-serif-medium"
            android:layout_marginRight="10dp"/>

        <com.codecomputerlove.problemshared.models.ToggleButtonPink
            android:id="@+id/religion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="religion"
            android:background="@color/button_background"
            android:textColor="@color/ps_pink"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <com.codecomputerlove.problemshared.models.ToggleButtonPink
            android:id="@+id/young_people"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="young people"
            android:background="@color/button_background"
            android:textColor="@color/ps_pink"
            android:fontFamily="sans-serif-medium"
            android:layout_marginRight="10dp"/>

        <com.codecomputerlove.problemshared.models.ToggleButtonPink
            android:id="@+id/animals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="animals"
            android:background="@color/button_background"
            android:textColor="@color/ps_pink"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <com.codecomputerlove.problemshared.models.ToggleButtonPink
            android:id="@+id/cubs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="cubs and scouts"
            android:background="@color/button_background"
            android:textColor="@color/ps_pink"
            android:fontFamily="sans-serif-medium"
            android:layout_marginRight="10dp"/>

        <com.codecomputerlove.problemshared.models.ToggleButtonPink
            android:id="@+id/art"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="arts and music"
            app:colorOne="@color/button_background"
            app:colorTwo="@color/ps_pink"
            android:background="@color/button_background"
            android:textColor="@color/ps_pink"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <Button
        android:id="@+id/text_button"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Start Volunteering"
        android:textColor="@android:color/white"
        android:background="@color/ps_pink"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:onClick="launchList"/>

</LinearLayout>
